<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:hardwareAccelerated="true"
    tools:context="cn.mkblog.www.mkbrowser.WebActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <!-- 顶部地址栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:background="@drawable/top_bar_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/webIcon"
                android:layout_width="@dimen/top_bar_height"
                android:layout_height="@dimen/top_bar_height"
                android:background="#01000000"
                android:contentDescription="favicon"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="11dp"
                android:src="@drawable/internet" />

            <EditText
                android:id="@+id/textUrl"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="#01000000"
                android:hint="@string/input_url"
                android:imeOptions="actionGo"
                android:inputType="textUri"
                android:maxLines="1"
                android:textColor="#606060"
                android:textColorHint="#9f9f9f"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/btnStart"
                android:layout_width="@dimen/top_bar_height"
                android:layout_height="@dimen/top_bar_height"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:background="#01000000"
                android:contentDescription="refresh"
                android:padding="11dp"
                android:src="@drawable/refresh" />

            <ImageView
                android:id="@+id/btnSign"
                android:layout_width="@dimen/top_bar_height"
                android:layout_height="@dimen/top_bar_height"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:background="#01000000"
                android:contentDescription="refresh"
                android:padding="11dp"
                android:src="@drawable/ic_sign_add" />

        </LinearLayout>

        <!-- 浏览器容器区域 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="#d1d1d1">

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- 网页进度条 -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:max="100"
                android:progress="50" />
        </FrameLayout>

        <!-- 底部导航栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- 后退按钮 -->
            <RelativeLayout style="@style/NavItem">

                <ImageView
                    android:id="@+id/goBack"
                    style="@style/NavIcon"
                    android:contentDescription="@string/nav_left"
                    android:src="@drawable/selector_left" />

            </RelativeLayout>

            <!-- 前进按钮 -->
            <RelativeLayout style="@style/NavItem">

                <ImageView
                    android:id="@+id/goForward"
                    style="@style/NavIcon"
                    android:contentDescription="@string/nav_right"
                    android:src="@drawable/selector_right" />

            </RelativeLayout>
            <!-- 收藏按钮 -->
            <RelativeLayout style="@style/NavItem">

                <ImageView
                    android:id="@+id/collection"
                    style="@style/NavIcon"
                    android:contentDescription="@string/nav_collection"
                    android:src="@drawable/selector_collect" />

            </RelativeLayout>

            <!-- 主页按钮 -->
            <RelativeLayout style="@style/NavItem">

                <ImageView
                    android:id="@+id/goHome"
                    style="@style/NavIcon"
                    android:contentDescription="@string/nav_home"
                    android:src="@drawable/selector_home" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
